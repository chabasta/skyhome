{
  "uid": "movie-rating",
  "title": "Movie Rating Service",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests (rate)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[1m]))",
          "legendFormat": "req/s"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP p95 latency",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[1m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Used",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"heap\"})",
          "legendFormat": "heap"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(process_cpu_usage[1m]) * 100",
          "legendFormat": "cpu %"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Application Logs",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 10 },
      "datasource": { "type": "loki", "uid": "Loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "{container=~\".*movie-rating-service.*\"}",
          "datasource": { "type": "loki", "uid": "Loki" }
        }
      ]
    }
  ]
}
